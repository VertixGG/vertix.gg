{
    "$schema": "https://raw.githubusercontent.com/SchemaStore/schemastore/master/src/schemas/json/package.json",
    "name": "vertix.gg",
    "author": "Leonid Vinikov <leonidvinikov@gmail.com> (https://github.com/iNewLegend)",
    "license": "proprietary",
    "type": "module",
    "version": "0.0.0",
    "description": "Vertix - Discord Bot",
    "private": true,
    "repository": {
        "type": "git",
        "url": "git+https://github.com/vertixgg/vertix.git"
    },
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "vertix:ci:jest": "bash scripts/ci-jest.bash",
        "vertix:ci:eslint": "bash scripts/ci-eslint.bash",
        "vertix:jest": "time ( bun run vertix:base:jest & bun run vertix:bot:jest & bun run vertix:gui:jest )",
        "vertix:eslint": "time bunx --bun eslint .",
        "vertix:eslint:fix": "time bunx --bun eslint . --fix",
        "vertix:bot:jest": "cd packages/vertix-bot && bun run vertix-bot:jest",
        "vertix:bot:eslint": "time bunx --bun eslint packages/vertix-bot",
        "vertix:bot:bun:start:dev": "cd packages/vertix-bot && bun run vertix-bot:bun:start:dev",
        "vertix:bot:node:start:dev": "cd packages/vertix-bot && bun run vertix-bot:ts-node:start:dev",
        "vertix:flow:dev": "cd packages/vertix-flow && bun run vertix-flow:dev",
        "vertix:base:eslint": "bunx --bun eslint packages/vertix-base",
        "vertix:base:jest": "cd packages/vertix-base ; bun run vertix-base:jest",
        "vertix:gui:eslint": "bunx --bun eslint packages/vertix-gui",
        "vertix:gui:jest": "cd packages/vertix-gui && bun run vertix-gui:jest",
        "vertix:utils:eslint": "time bunx --bun eslint packages/vertix-utils",
        "vertix-flow:nextjs:dev": "cd src/nextjs-server && next dev -p 3000",
        "vertix-flow:nextjs:build": "cd src/nextjs-server && next build",
        "vertix-flow:nextjs:start": "cd src/nextjs-server && next start -p 3000"
    },
    "dependencies": {
        "@typescript-eslint/types": "^8.27.0",
        "@typescript-eslint/typescript-estree": "^8.27.0",
        "@xyflow/react": "^12.4.4",
        "@zenflux/cli": "latest",
        "@zenflux/utils": "latest",
        "discord-api-types": "latest",
        "discord.js": "latest"
    },
    "devDependencies": {
        "@swc/jest": "latest",
        "@types/bun": "latest",
        "@types/jest": "latest",
        "@types/jest-when": "latest",
        "@types/node": "latest",
        "@typescript-eslint/eslint-plugin": "^8.27.0",
        "@typescript-eslint/parser": "^8.27.0",
        "@zenflux/eslint": "latest",
        "@zenflux/jest": "latest",
        "@zenflux/tsconfig-to-swc": "latest",
        "bun": "latest",
        "bun-types": "^1.2.5",
        "cross-env": "^7.0.3",
        "eslint": "latest",
        "jest": "latest",
        "jest-when": "latest",
        "ts-mockito": "latest",
        "tsx": "^4.19.3",
        "typescript": "latest"
    },
    "packageManager": "bun@1.2.5",
    "peerDependencies": {
        "typescript": "^5.0.0"
    }
}
