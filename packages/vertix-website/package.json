{
	"name": "@vertix.gg/website",
	"version": "0.1.0",
	"license": "MIT",
	"private": true,
	"type": "module",
	"dependencies": {
		"@types/node": "^20.11.5",
		"@types/react": "^18.2.48",
		"@types/react-dom": "^18.2.18",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-markdown": "^8.0.7",
		"react-photo-view": "^1.2.3",
		"react-router-dom": "^6.11.2",
		"sass": "^1.70.0",
		"typescript": "^5.3.3",
		"web-vitals": "^2.1.4"
	},
	"devDependencies": {
		"@vitejs/plugin-react": "^4.2.1",
		"autoprefixer": "^10.4.21",
		"postcss": "^8.5.6",
		"tailwindcss": "^3.4.1",
		"vite": "^5.0.12"
	},
	"scripts": {
		"vertix-website:css:build": "bunx tailwindcss -c ./tailwind.config.js -i ./src/vertix/styles.css -o ./src/vertix/styles.output.css",
		"vertix-website:css:watch": "bunx tailwindcss -c ./tailwind.config.js -i ./src/vertix/styles.css -o ./src/vertix/styles.output.css --watch",
		"vertix-website:dev": "bun run vertix-website:css:build && vite",
		"vertix-website:build": "bun run vertix-website:css:build && tsc && vite build",
		"vertix-website:preview": "vite preview",
		"vertix-website:serve": "vite build && vite preview",
		"vertix-website:release": "vite build && bash ./scripts/release.sh"
	},
	"eslintConfig": {
		"extends": [
			"react-app",
			"react-app/jest"
		]
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	}
}
