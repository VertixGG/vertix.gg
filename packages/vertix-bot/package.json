{
    "name": "@vertix.gg/bot",
    "version": "0.0.53",
    "license": "MIT",
    "author": "Leonid Vinikov <leonidvinikov@gmail.com>",
    "main": "index.ts",
    "bin": "dist/index.min.js",
    "type": "module",
    "scripts": {
        "vertix-bot:build": "scripts/build.sh",
        "vertix-bot:release": "scripts/build.sh --update-package-version && bash ./scripts/release.sh",
        "vertix-bot:release:jest-env": "scripts/build.sh && bash ./scripts/release-test-env.sh",
        "vertix-bot:node:start": "node -r dotenv/config dist/vertix-bot.mjs dotenv_config_path=.env",
        "vertix-bot:bun:start:dev": "dotenv_config_path=.env bun -r 'dotenv/config' src/index-bun.ts",
        "vertix-bot:bun:start:dev--debug": "dotenv_config_path=.env bun --inspect -r 'dotenv/config' src/index-bun.ts",
        "vertix-bot:ts-node:start:dev": "tsx --tsconfig tsconfig.es.dev.json --trace-exit --trace-uncaught --enable-source-maps src/index.ts",
        "vertix-bot:ts-node:start:dev--debug": "NODE_OPTIONS='--max-old-space-size=226' ts-node src/index.ts",
        "vertix-bot:jest": "export DISABLE_LOGGER=true && @z-jest --selectedProjects bot"
    },
    "dependencies": {
        "@top-gg/sdk": "^3.1.6",
        "@vertix.gg/base": "workspace:*",
        "@vertix.gg/prisma": "workspace:*",
        "cross-fetch": "^3.1.5",
        "dotenv": "^16.0.3",
        "picocolors": "^1.0.1",
        "threads": "^1.7.0"
    },
    "devDependencies": {
        "@types/jest": "latest",
        "@types/jest-when": "latest",
        "@types/node": "latest",
        "@swc/jest": "latest",
        "@zenflux/tsconfig-to-swc": "latest",
        "jest": "latest",
        "jest-when": "latest",
        "ts-mockito": "latest",
        "tsx": "latest"
    }
}
